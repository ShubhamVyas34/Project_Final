@model IEnumerable<Project_Final.Models.Cities>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cityPopulation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cityAttraction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cityInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.traveller)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cityPopulation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cityAttraction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cityInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.traveller.travellerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.cityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.cityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.cityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
